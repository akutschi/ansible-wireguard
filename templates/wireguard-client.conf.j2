[Interface]
PrivateKey = {{ item.wireguard_client_key }}
Address = {{ wireguard_network_ipv4 }}.{{ item.wireguard_client_id + 1 }}/32, {{ wireguard_network_ipv6 }}:{{ (item.wireguard_client_id + 1)| hex_id }}128
DNS = {{ dns_ipv4_1 }}, {{ dns_ipv4_2 }}, {{ dns_ipv6_1 }}, {{ dns_ipv6_2 }}

[Peer]
PublicKey = {{ wireguard_server_pub.stdout }}
Endpoint = {{ inventory_hostname }}:{{ wireguard_port }}
AllowedIPs = {{ wireguard_allowed_ipv4 }}, {{ wireguard_allowed_ipv6 }}

